page{
  background-color: #eee;
}
.search_container{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 700rpx;
  margin: 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.searchicon{
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.clearicon{
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.input{
  font-size: 30rpx;
  width: 600rpx;
}
.bar{
  display: flex;
  align-items: center;
  background-color: #fff;
  width: 750rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #808080;
  margin-bottom: 2rpx;
}
.baritem{
  width:33%;
  text-align: center;
}
.goods{
  display: flex;
  width:700rpx;
  padding: 25rpx;
  height: 200rpx;
  background-color: #fff;
}
.shop_image{
  width: 200rpx;
  height: 200rpx;
}
.shop_info{
  width: 480rpx;
  margin-left:20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shop_price{
  color: red;
  margin-right: 20rpx;
}
.shop_sale{
  color: #808080;
  font-size: 25rpx;
}
.cart{
  width: 50rpx;
  height: 50rpx;
}
.shop_bottom{
  display:flex;align-items:center;
  justify-content: space-between;
  height: 60rpx;
}
.shop_name{
  width: 480rpx;
  height: 140rpx;
}

.commodity_screen {
 width:100%;
 height:100%;
 position:fixed;
 top:0;
 left:0;
 background:#000;
 opacity:0.2;
 overflow:hidden;
 z-index:1000;
 color:#fff;
}
.commodity_attr_box {
  width:750rpx;
  position:fixed;
  bottom:0;
  left:0;
  z-index:2000;
  background:#fff;
}
.title{
  font-size: 30rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.selectors
{
  width:750rpx;display:flex;
}
.items{
  border-radius: 5rpx;
  border: 1px solid #eee;
  margin-right: 10rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  padding: 10rpx;
  min-width: 80rpx;
  text-align: center;
}
.add_buttons{
  position: absolute;
  bottom: 0;
  z-index: 2001;
  width: 750rpx;
  height: 80rpx;
  font-size: 35rpx; 
  display: flex;
}
.button1{
  background-color: orange;
  text-align: center;
  line-height: 80rpx;
  width: 50%;
  color: #fff;
}
.button2{
  background-color: red;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  width: 50%;  
}
.remain{
  display:flex;
  width:100%;
  justify-content:space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
  border-top:1px solid #eee;
  padding-top: 20rpx;
}
.num{
  min-width: 60rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx;
  line-height: 50rpx;
  height: 50rpx;
  border: 1px solid #c8c8c8;
}
.left{
  border-right:0;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}
.right{
  border-left: 0;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}